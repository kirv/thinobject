#!/bin/bash

source parse-query || exit

error() { # dummy error() for testing...
    exitcode=1
    test "$1" = -x && exitcode=$2
    }

try_assert() {
    exitcode=0
    parse_query "$1"
    test -n "$2" && {
        test "$exitcode" = "$2" && return
        echo FAILED ASSERTION: exitcode "$exitcode" = "$2"
        exit 1
        }
    }

assert() {
    test "$1" = "$2" && return
    echo FAILED ASSERTION: "$1" = "$2"
    exit 1
    }

assert_query() {
    test $VERBOSE &&
        declare -p q
    declare -i i
    i=0
    for s in "$@"; do
        assert "${q[i]}" "$s"
        i+=1
    done
    }

## test with empty query:
unset q o m
try_assert "" 13
test $VERBOSE &&
    echo "Q(${q[*]}) O($o) M($m)"

## test with foo.var
try_assert foo.bar 0
assert_query foo.bar foo.bar foo bar
assert $o 2
assert $m 3

unset q o m
try_assert a.b.c 0
assert_query    a.b.c   a.b.c   a   b   c
assert $o 2
assert $m 4

unset q o m
try_assert x/y/z.m 0
assert_query    x/y/z.m     x/.y/.z.m   x/  y/  z   m
assert $o 2
assert $m 5

unset q o m
try_assert M 0
assert_query    ..M     ..M     M
assert $o 2
assert $m 2

echo DONE ${0##*/}


