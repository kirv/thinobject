#!/bin/sh

destination=/usr/local/bin/

VERBOSE=1

test -n "$1" && {
    opt=$1 && shift
    test $opt == "--no-verbose" || test $opt == "-V" &&
        unset VERBOSE
    test $opt == "--verbose" || test $opt == "-v" &&
        VERBOSE=1
    }

for prog in tob tob-new; do
    test $prog -nt $destination/$prog && {
        test "$VERBOSE" && 
            echo copying $prog to $destination
        cp $prog $destination/$prog ||
            echo FAILED copying $prog to $destination
        }
done

exit 0
